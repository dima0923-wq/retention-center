generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Lead {
  id          String   @id @default(cuid())
  externalId  String?
  firstName   String
  lastName    String
  phone       String?
  email       String?
  source      String   @default("MANUAL")
  status      String   @default("NEW")
  meta        String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  campaignLeads        CampaignLead[]
  contactAttempts      ContactAttempt[]
  sequenceEnrollments  SequenceEnrollment[]
  conversions          Conversion[]

  @@index([email])
  @@index([phone])
  @@index([status])
}

model Campaign {
  id          String    @id @default(cuid())
  name        String
  description String?
  status      String    @default("DRAFT")
  channels    String    @default("[]")
  meta        String?
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  campaignLeads   CampaignLead[]
  scripts         Script[]
  contactAttempts ContactAttempt[]
  abTests         ABTest[]
  conversions     Conversion[]

  @@index([status])
}

model CampaignLead {
  id          String    @id @default(cuid())
  campaignId  String
  leadId      String
  status      String    @default("PENDING")
  assignedAt  DateTime  @default(now())
  completedAt DateTime?

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  lead     Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@unique([campaignId, leadId])
  @@index([campaignId])
  @@index([leadId])
}

model Script {
  id          String   @id @default(cuid())
  name        String
  type        String
  content     String?
  vapiConfig  String?
  campaignId  String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  campaign        Campaign?        @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  contactAttempts ContactAttempt[]
  sequenceSteps   SequenceStep[]

  @@index([campaignId])
  @@index([type])
}

model ContactAttempt {
  id          String    @id @default(cuid())
  leadId      String
  campaignId  String?
  channel     String
  status      String    @default("PENDING")
  scriptId    String?
  provider    String?
  providerRef String?
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  duration    Int?
  cost        Float?
  result      String?
  notes       String?

  lead     Lead      @relation(fields: [leadId], references: [id], onDelete: Cascade)
  campaign Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  script   Script?   @relation(fields: [scriptId], references: [id], onDelete: SetNull)

  stepExecutions SequenceStepExecution[]
  conversions    Conversion[]

  @@index([leadId])
  @@index([channel])
  @@index([campaignId])
}

model IntegrationConfig {
  id        String   @id @default(cuid())
  provider  String   @unique
  type      String
  config    String   @default("{}")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Conversion {
  id               String   @id @default(cuid())
  leadId           String?
  campaignId       String?
  channel          String?
  revenue          Float    @default(0)
  status           String   @default("lead")
  subId            String?
  clickId          String?
  source           String   @default("keitaro")
  postbackData     String?
  contactAttemptId String?
  createdAt        DateTime @default(now())

  lead           Lead?           @relation(fields: [leadId], references: [id], onDelete: SetNull)
  campaign       Campaign?       @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  contactAttempt ContactAttempt? @relation(fields: [contactAttemptId], references: [id], onDelete: SetNull)

  @@index([leadId])
  @@index([campaignId])
  @@index([subId])
  @@index([clickId])
  @@index([source])
}

model ConversionRule {
  id             String   @id @default(cuid())
  channel        String
  metric         String
  value          String
  conversionRate Float    @default(0)
  sampleSize     Int      @default(0)
  confidence     Float    @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([channel])
  @@index([metric])
}

model ABTest {
  id          String    @id @default(cuid())
  campaignId  String
  channel     String
  variantA    String
  variantB    String
  status      String    @default("RUNNING")
  winnerId    String?
  startedAt   DateTime  @default(now())
  endedAt     DateTime?
  statsA      String    @default("{}")
  statsB      String    @default("{}")

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@index([campaignId])
  @@index([status])
}

// ─── Retention Sequence Models ───────────────────────────────────────────────

model RetentionSequence {
  id            String   @id @default(cuid())
  name          String
  description   String?
  status        String   @default("DRAFT") // DRAFT | ACTIVE | PAUSED | ARCHIVED
  channels      String   @default("[]") // JSON array of enabled channels
  triggerType   String   @default("manual") // new_lead | no_conversion | manual
  triggerConfig String   @default("{}") // JSON - source filters, campaign filters, etc.
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  steps       SequenceStep[]
  enrollments SequenceEnrollment[]

  @@index([status])
  @@index([triggerType])
}

model SequenceStep {
  id         String   @id @default(cuid())
  sequenceId String
  stepOrder  Int
  channel    String // EMAIL | SMS | CALL
  scriptId   String?
  delayValue Int      @default(0)
  delayUnit  String   @default("HOURS") // HOURS | DAYS | WEEKS
  conditions String   @default("{}") // JSON - e.g. "only if not converted"
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  sequence   RetentionSequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  script     Script?           @relation(fields: [scriptId], references: [id], onDelete: SetNull)
  executions SequenceStepExecution[]

  @@index([sequenceId])
  @@index([stepOrder])
}

model SequenceEnrollment {
  id          String    @id @default(cuid())
  sequenceId  String
  leadId      String
  status      String    @default("ACTIVE") // ACTIVE | PAUSED | COMPLETED | CANCELLED | CONVERTED
  currentStep Int       @default(0)
  enrolledAt  DateTime  @default(now())
  completedAt DateTime?
  lastStepAt  DateTime?
  meta        String    @default("{}") // JSON for tracking

  sequence   RetentionSequence      @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  lead       Lead                   @relation(fields: [leadId], references: [id], onDelete: Cascade)
  executions SequenceStepExecution[]

  @@unique([sequenceId, leadId])
  @@index([sequenceId])
  @@index([status])
  @@index([leadId])
}

model SequenceStepExecution {
  id                String    @id @default(cuid())
  enrollmentId      String
  stepId            String
  contactAttemptId  String?
  status            String    @default("PENDING") // PENDING | SCHEDULED | SENT | DELIVERED | FAILED | SKIPPED
  scheduledAt       DateTime?
  executedAt        DateTime?
  result            String    @default("{}") // JSON

  enrollment     SequenceEnrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  step           SequenceStep       @relation(fields: [stepId], references: [id], onDelete: Cascade)
  contactAttempt ContactAttempt?    @relation(fields: [contactAttemptId], references: [id], onDelete: SetNull)

  @@index([enrollmentId])
  @@index([stepId])
  @@index([status])
  @@index([scheduledAt])
}
