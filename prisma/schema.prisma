generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Lead {
  id          String   @id @default(cuid())
  externalId  String?
  firstName   String
  lastName    String
  phone       String?
  email       String?
  source      String   @default("MANUAL")
  status      String   @default("NEW")
  meta        String?
  notes          String?
  score          Int       @default(0)
  scoreLabel     String    @default("NEW") // NEW | HOT | WARM | COLD | DEAD
  scoreUpdatedAt DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  webhookId   String?

  campaignLeads        CampaignLead[]
  contactAttempts      ContactAttempt[]
  sequenceEnrollments  SequenceEnrollment[]
  conversions          Conversion[]
  webhook              Webhook?  @relation(fields: [webhookId], references: [id], onDelete: SetNull)

  @@index([email])
  @@index([phone])
  @@index([status])
  @@index([score])
  @@index([scoreLabel])
  @@index([webhookId])
}

model Campaign {
  id          String    @id @default(cuid())
  name        String
  description String?
  status      String    @default("DRAFT")
  channels    String    @default("[]")
  meta        String?
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  campaignLeads   CampaignLead[]
  scripts         Script[]
  contactAttempts ContactAttempt[]
  abTests         ABTest[]
  conversions     Conversion[]
  zapierConfigs   ZapierWebhookConfig[]
  webhooks        Webhook[]

  @@index([status])
}

model CampaignLead {
  id          String    @id @default(cuid())
  campaignId  String
  leadId      String
  status      String    @default("PENDING")
  assignedAt  DateTime  @default(now())
  completedAt DateTime?

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  lead     Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@unique([campaignId, leadId])
  @@index([campaignId])
  @@index([leadId])
}

model Script {
  id          String   @id @default(cuid())
  name        String
  type        String
  content     String?
  vapiConfig  String?
  campaignId  String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  campaign        Campaign?        @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  contactAttempts ContactAttempt[]
  sequenceSteps   SequenceStep[]

  @@index([campaignId])
  @@index([type])
}

model ContactAttempt {
  id          String    @id @default(cuid())
  leadId      String
  campaignId  String?
  channel     String
  status      String    @default("PENDING")
  scriptId    String?
  provider    String?
  providerRef String?
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  duration    Int?
  cost        Float?
  result      String?
  notes       String?

  lead     Lead      @relation(fields: [leadId], references: [id], onDelete: Cascade)
  campaign Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  script   Script?   @relation(fields: [scriptId], references: [id], onDelete: SetNull)

  stepExecutions SequenceStepExecution[]
  conversions    Conversion[]
  deliveryEvents SmsDeliveryEvent[]

  @@index([leadId])
  @@index([channel])
  @@index([campaignId])
}

model IntegrationConfig {
  id        String   @id @default(cuid())
  provider  String   @unique
  type      String
  config    String   @default("{}")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Conversion {
  id               String   @id @default(cuid())
  leadId           String?
  campaignId       String?
  channel          String?
  revenue          Float    @default(0)
  status           String   @default("lead")
  subId            String?
  clickId          String?
  source           String   @default("keitaro")
  postbackData     String?
  contactAttemptId String?
  createdAt        DateTime @default(now())

  lead           Lead?           @relation(fields: [leadId], references: [id], onDelete: SetNull)
  campaign       Campaign?       @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  contactAttempt ContactAttempt? @relation(fields: [contactAttemptId], references: [id], onDelete: SetNull)

  @@index([leadId])
  @@index([campaignId])
  @@index([subId])
  @@index([clickId])
  @@index([source])
}

model ConversionRule {
  id             String   @id @default(cuid())
  channel        String
  metric         String
  value          String
  conversionRate Float    @default(0)
  sampleSize     Int      @default(0)
  confidence     Float    @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([channel])
  @@index([metric])
}

model ABTest {
  id          String    @id @default(cuid())
  campaignId  String
  channel     String
  variantA    String
  variantB    String
  status      String    @default("RUNNING")
  winnerId    String?
  startedAt   DateTime  @default(now())
  endedAt     DateTime?
  statsA      String    @default("{}")
  statsB      String    @default("{}")

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@index([campaignId])
  @@index([status])
}

// ─── Retention Sequence Models ───────────────────────────────────────────────

model RetentionSequence {
  id            String   @id @default(cuid())
  name          String
  description   String?
  status        String   @default("DRAFT") // DRAFT | ACTIVE | PAUSED | ARCHIVED
  channels      String   @default("[]") // JSON array of enabled channels
  triggerType   String   @default("manual") // new_lead | no_conversion | manual
  triggerConfig String   @default("{}") // JSON - source filters, campaign filters, etc.
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  steps       SequenceStep[]
  enrollments SequenceEnrollment[]
  zapierConfigs ZapierWebhookConfig[]
  webhooks      Webhook[]

  @@index([status])
  @@index([triggerType])
}

model SequenceStep {
  id         String   @id @default(cuid())
  sequenceId String
  stepOrder  Int
  channel    String // EMAIL | SMS | CALL
  scriptId   String?
  delayValue Int      @default(0)
  delayUnit  String   @default("HOURS") // HOURS | DAYS | WEEKS
  conditions String   @default("{}") // JSON - e.g. "only if not converted"
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  sequence   RetentionSequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  script     Script?           @relation(fields: [scriptId], references: [id], onDelete: SetNull)
  executions SequenceStepExecution[]

  @@index([sequenceId])
  @@index([stepOrder])
}

model SequenceEnrollment {
  id          String    @id @default(cuid())
  sequenceId  String
  leadId      String
  status      String    @default("ACTIVE") // ACTIVE | PAUSED | COMPLETED | CANCELLED | CONVERTED
  currentStep Int       @default(0)
  enrolledAt  DateTime  @default(now())
  completedAt DateTime?
  lastStepAt  DateTime?
  meta        String    @default("{}") // JSON for tracking

  sequence   RetentionSequence      @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  lead       Lead                   @relation(fields: [leadId], references: [id], onDelete: Cascade)
  executions SequenceStepExecution[]

  @@unique([sequenceId, leadId])
  @@index([sequenceId])
  @@index([status])
  @@index([leadId])
}

model SequenceStepExecution {
  id                String    @id @default(cuid())
  enrollmentId      String
  stepId            String
  contactAttemptId  String?
  status            String    @default("PENDING") // PENDING | SCHEDULED | SENT | DELIVERED | FAILED | SKIPPED
  scheduledAt       DateTime?
  executedAt        DateTime?
  result            String    @default("{}") // JSON

  enrollment     SequenceEnrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  step           SequenceStep       @relation(fields: [stepId], references: [id], onDelete: Cascade)
  contactAttempt ContactAttempt?    @relation(fields: [contactAttemptId], references: [id], onDelete: SetNull)

  @@index([enrollmentId])
  @@index([stepId])
  @@index([status])
  @@index([scheduledAt])
}

// ─── Email Template Models ──────────────────────────────────────────────────

model EmailTemplate {
  id          String   @id @default(cuid())
  name        String
  subject     String
  htmlBody    String
  textBody    String?
  fromEmail   String   @default("noreply@example.com")
  fromName    String   @default("Retention Center")
  trigger     String   @default("manual")
  isActive    Boolean  @default(true)
  isDefault   Boolean  @default(false)
  variables   String   @default("[]")
  metadata    String   @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([trigger])
  @@index([isActive])
}

// ─── Zapier Webhook Config Models ───────────────────────────────────────────

model ZapierWebhookConfig {
  id                    String   @id @default(cuid())
  campaignId            String
  metaCampaignId        String
  metaAdsetId           String?
  metaFormId            String?
  isActive              Boolean  @default(true)
  channelConfig         String   @default("{}") // JSON: { sms: { enabled, scriptId }, email: { enabled, scriptId }, call: { enabled, scriptId } }
  autoEnrollSequenceId  String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  campaign  Campaign           @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  sequence  RetentionSequence? @relation(fields: [autoEnrollSequenceId], references: [id], onDelete: SetNull)

  @@index([metaCampaignId])
  @@index([campaignId])
  @@index([metaFormId])
}

// ─── VAPI Call Models ──────────────────────────────────────────────────────

model VapiCall {
  id                 String    @id @default(cuid())
  vapiCallId         String    @unique
  type               String?   // inboundPhoneCall, outboundPhoneCall, webCall
  status             String    // scheduled, queued, ringing, in-progress, ended
  assistantId        String?
  phoneNumberId      String?
  customerNumber     String?
  customerName       String?
  startedAt          DateTime?
  endedAt            DateTime?
  duration           Int?      // seconds
  cost               Float?
  costBreakdown      String?   @default("{}") // JSON of transport, stt, llm, tts, vapi costs
  transcript         String?   // full text transcript
  messages           String?   @default("[]") // JSON array of role/content messages
  recordingUrl       String?
  stereoRecordingUrl String?
  summary            String?   // from analysis
  successEvaluation  String?
  structuredData     String?   @default("{}")
  endedReason        String?
  contactAttemptId   String?   // link to our ContactAttempt if call was initiated from RC
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  logs VapiCallLog[]

  @@index([vapiCallId])
  @@index([status])
  @@index([customerNumber])
  @@index([assistantId])
  @@index([startedAt])
  @@index([contactAttemptId])
}

model VapiCallLog {
  id         String   @id @default(cuid())
  vapiCallId String
  eventType  String
  payload    String   // raw JSON
  createdAt  DateTime @default(now())

  vapiCall VapiCall @relation(fields: [vapiCallId], references: [vapiCallId], onDelete: Cascade)

  @@index([vapiCallId])
  @@index([eventType])
  @@index([createdAt])
}

// ─── SMS Delivery Event Models ──────────────────────────────────────────────

model SmsDeliveryEvent {
  id                String   @id @default(cuid())
  contactAttemptId  String?
  providerRef       String
  provider          String
  status            String   // normalized: SENT | DELIVERED | FAILED | UNDELIVERED | PENDING | UNKNOWN
  rawStatus         String   // original status string from provider
  rawPayload        String   @default("{}") // full JSON webhook payload
  senderIp          String?  // IP of webhook caller for audit
  receivedAt        DateTime @default(now())

  contactAttempt    ContactAttempt? @relation(fields: [contactAttemptId], references: [id], onDelete: SetNull)

  @@index([contactAttemptId])
  @@index([providerRef])
  @@index([receivedAt])
  @@index([status])
}

// ─── Webhook Models ─────────────────────────────────────────────────────────

model Webhook {
  id               String    @id @default(cuid())
  name             String
  slug             String    @unique
  type             String    @default("generic") // zapier | facebook | generic
  sourceLabel      String    // stored on Lead.source, e.g. "ZAPIER_IT", "FB_MAIN"
  isActive         Boolean   @default(true)
  verifyToken      String?   // for Facebook webhook verification
  pageAccessToken  String?   // for Facebook Lead Ads API calls
  config           String    @default("{}") // JSON: campaign routing, sequence enrollment, channel configs
  campaignId       String?   // auto-assign leads to this campaign
  sequenceId       String?   // auto-enroll leads in this sequence
  fieldMapping     String    @default("{}") // JSON: maps incoming field names to Lead fields
  lastReceivedAt   DateTime?
  leadCount        Int       @default(0)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  campaign  Campaign?          @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  sequence  RetentionSequence? @relation(fields: [sequenceId], references: [id], onDelete: SetNull)
  leads     Lead[]

  @@index([type])
  @@index([isActive])
  @@index([campaignId])
  @@index([sequenceId])
}
